<div class="container" style="margin-top: 50px;">
    {{!-- Fila 1 --}}
    <h4 class="text-center">Hola {{usuario}} !</h4>
    <div class="text-end">
        <a class="btn btn-danger" style="margin-bottom: 10px;" href="/admin/login/logout"> Cerrar Sesion <i
                class="fas fa-sign-out-alt"></i></a>
    </div>
    {{!-- Fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3 style="text-align: start">Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa-solid fa-plus"></i> Nuevo</a>
        </div>
    </div>
    {{!-- Fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"
                                onclick="return window.confirm('Â¿Realmente desea eliminar?')">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>